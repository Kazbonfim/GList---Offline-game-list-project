                                    <h5 class="card-title game-title"
                                        style="text-shadow: -1px 4px 6px rgba(0, 0, 0, 0.5)">
                                        {{this.title}}
                                    </h5>
                                    <hr style="background-color: rgba(255, 255, 255, 0.8)" />
                                    <h6 class="card-subtitle mb-2 text-light">{{this.console}}</h6>
                                    <p class="card-text">GÃªnero: {{this.genre}}</p>

                                    <!-- BotÃ£o de exclusÃ£o do jogo -->
                                    <form class="remove-game-form" action="/games/deletegames/{{this.id}}"
                                        method="post">
                                        <button class="btn btn-danger btn-sm border" type="submit">Excluir</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    </div>

